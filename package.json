{
  "name": "emojis4git",
  "displayName": "Gitmoji Commit",
  "publisher": "benjaminadk",
  "description": "Gitmoji commits made easy",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "emoji",
    "git",
    "commit",
    "message",
    "gitmoji"
  ],
  "markdown": "github",
  "activationEvents": [
    "onCommand:extension.gitmojiCommit",
    "onCommand:extension.gitmojiCheatSheet"
  ],
  "icon": "icon.png",
  "main": "./src/extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/benjaminadk/emojigit.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.gitmojiCommit",
        "title": "Create Commit Message",
        "category": "Gitmoji Commit"
      },
      {
        "command": "extension.gitmojiCheatSheet",
        "title": "Open Cheat Sheet",
        "category": "Gitmoji Commit"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Gitmoji Commit Configuration",
      "properties": {
        "gitmoji.emojiSyntax": {
          "type": "string",
          "default": "colon",
          "enum": [
            "colon",
            "unicode"
          ],
          "markdownDescription": "Use colon syntax (e.g. `:tada:`) or Unicode (e.g. ðŸŽ‰) in commit message.",
          "scope": "application"
        },
        "gitmoji.autoCommit": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Automatically execute git commit command. [Read more here.](https://github.com/benjaminadk/emojigit#configuration)",
          "scope": "application"
        },
        "gitmoji.autoClose": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Close terminal after commit.",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "eslint": "^4.11.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42"
  }
}
